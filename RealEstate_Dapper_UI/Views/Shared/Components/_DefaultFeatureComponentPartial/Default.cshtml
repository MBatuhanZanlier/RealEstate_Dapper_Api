@model List<ResultCategoryDto>
<section class="w3l-cover-3">
    <div class="cover top-bottom">
        <div class="container">
            <div class="middle-section text-center">
                <div class="section-width">
                    <p>Hayalinizdeki eve sahip olun</p>
                    <h2>Bügün Sizin için Doğru Evi bulalım</h2>
                    <div class="most-searches">
                        <h4>Sık Arananlar</h4>
                        <ul>
                            <li><a href="#link">Villa</a></li>
                            <li><a href="#link">Apartment</a></li>
                            <li><a href="#link">Private house</a></li>
                        </ul>
                    </div>
                    <form asp-action="PropertyListWithSearch" asp-controller="Property" class="w3l-cover-3-gd" method="post">
                        <input type="search" name="searchKeyValue" placeholder="Anahtar Kelimeyi Girin" required>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="propertyCategoryıd" required>
                                <option selected="">Office</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.CategoryID">@item.CategoryName</option>
                                }
                            </select>
                        </span>
                        <span class="input-group-btn">
                            <select class="btn btn-default" name="city" required>
                                <option selected="">Ülke Seçiniz</option>
                                <option>Balıkkesir</option>
                                <option>Ankara</option>
                                <option>İzmir</option>
                                <option>Kayseri</option>
                                <option>Bursa</option>
                                <option>America</option>
                                <option>Srilanka</option>
                            </select>
                        </span>
                        <button type="submit" class="btn-primary">Ara</button>
                    </form>
                </div>
                <section id="bottom" class="demo">
                    <a href="#bottom"><span></span>İlan Listesi</a>
                </section>
            </div>
        </div>
    </div>
</section>
