@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="index.html">Home</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> ilanlar</li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayları</li>
        </ul>
    </div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category"><span>Buy</span><span>@ViewBag.type</span></div>
                </li>
                <li><span class="fa fa-clock-o"></span> Yaklaşık @ViewBag.datediff ay önce ilana verildi.</li>
                <li><span class="fa fa-eye"></span> 250 kişi bu ilanı görüntüledi</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single">@ViewBag.title1</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@ViewBag.addres @ViewBag.district/@ViewBag.city</p>
                </li>
                <li><span class="fa fa-bed"></span>@ViewBag.bathCount</li>
                <li><span class="fa fa-bath"></span>@ViewBag.bedcount</li>
                <li><span class="fa fa-share-square-o"></span>@ViewBag.size metrekare</li>
            </ul>
            <ul class="share-post">
                <a href="#url" class="cost-estate m-o">$25,0045</a>
            </ul>
        </div>

        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">
                    @await Component.InvokeAsync("_PropertySliderComponentPartial",new{id=ViewBag.i})

                    <div class="single-post-content">
                        <h3 class="post-content-title mb-3">
                            İlan Açıklaması<h3>
                                <p class="mb-4">
                                    @ViewBag.description
                                </p>

                                <div class="single-bg-white">
                                    <h3 class="post-content-title mb-4">İlan Detayları</h3>
                                    <ul class="details-list">
                                        <li><strong>İlan ıd:</strong>@ViewBag.productıd</li>
                                        <li><strong>Metre kare:</strong>@ViewBag.size </li>
                                        <li><strong>Oda sayısı:</strong>@ViewBag.roomcount </li>
                                        <li><strong>Yatak odası:</strong>@ViewBag.bedcount </li>
                                        <li><strong>Banyo Sayısı</strong>@ViewBag.bathCount</li>
                                        <li><strong>Exterior material :</strong> Brick </li>
                                        <li><strong>Yapı Türü :</strong> Beton </li>
                                        <li><strong>Garaj Sayısı :</strong>@ViewBag.garage </li>
                                        <li><strong>Fiyat :</strong>@ViewBag.price</li>
                                        <li><strong>Yapım Yılı:</strong>@ViewBag.buildyear</li>
                                        <li><strong>İlan Tarihi :</strong>@ViewBag.date.ToString("dd-MMM-yyyy") </li>
                                    </ul>
                                </div> 
                                @await Component.InvokeAsync("_PropertyAmenityStatusTrueByPropertyIdComponentPartial")
                                
                    </div>

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Locasyon</h3>
                        <div class="agent-map">
                            <iframe src="@ViewBag.location"></iframe>
    
                        </div>
                    </div>
                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Video</h3>
                        <div class="post-content">
                            <iframe src="https://www.youtube.com/embed/jqP3m3ElcxA" frameborder="0"
                                    allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("_PropertyAppUserComponentPartial")

        </div>
    </div>
</section>
<script>
    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () {
        scrollFunction()
    };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            document.getElementById("movetop").style.display = "block";
        } else {
            document.getElementById("movetop").style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
